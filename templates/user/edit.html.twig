{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <h1 class="mb-4">Modifier l'utilisateur</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="mb-3">
            {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            {% if form.firstName.vars.errors|length > 0 %}
                <div class="text-danger">
                    {{ form_errors(form.firstName) }}
                </div>
            {% endif %}
        </div>
        <div class="mb-3">
            {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
            {% if form.lastName.vars.errors|length > 0 %}
                <div class="text-danger">
                    {{ form_errors(form.lastName) }}
                </div>
            {% endif %}
        </div>
        <div class="mb-3">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {% if form.email.vars.errors|length > 0 %}
                <div class="text-danger">
                    {{ form_errors(form.email) }}
                </div>
            {% endif %}
        </div>
        <div class="mb-3">
            {{ form_label(form.phone, 'Phone', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.phone) }}
            </div>
        </div>
        <div class="mb-3">
            {{ form_label(form.birthday, 'Birthday', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback">
                {{ form_errors(form.birthday) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('user_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
{% endblock %}